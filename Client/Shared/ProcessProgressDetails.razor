@using Program=Accreditation_Watch.Shared.Entities.Program
@using Microsoft.IdentityModel.Tokens
@inject IDepartmentService DepartmentService
@inject ISchoolService SchoolService
@inject IAccrediteStatusService AccrediteStatusService
@inject IProgramService ProgramService
@inject INoteService NoteService
@inject IAuthService AuthService
@inject IMailService MailService
 @if(busy){
               <Loading/>
            }





@if (Schools is not null && AccrediteStatuses is not null)
{
            @if(Program is not null && Program.Department is not null)
            {
                <div class="row grid-max-height">
                    
                    <div class="col-12">
                        <h5>Basic Information</h5>
                        <div class="form-group">
                            <label for="program-name">Name</label>
                            <input type="text" class="form-control" id="program-name" @bind="Program.Name" disabled />
                        </div>
                         <div class="form-group">
                              
                              <label for="program-name">Degree Level</label>
                              <InputSelect @bind-Value="Program.Degree" class="form-control" placeholder="Program Name">
                                   @foreach (var degree in Enum.GetValues(typeof(Degree)))
                                   {
                                        <option value="@degree">@degree</option>
                                   }
                              </InputSelect>
                         </div>

                        <div class="form-group">
                            <label for="program-name">Department</label>
                            <InputSelect @bind-Value="Program.DepartmentId" class="form-select" aria-label="Default select example" >
                                <option value="@Program.DepartmentId">@DepartmentService.Objects.First(dep=>dep.Id==Program.DepartmentId).Name</option>
                                @if (AccrediteStatuses is not null)
                                {
                                    @foreach (var item in DepartmentService.Objects)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                }
                            </InputSelect>
                        </div>
                        <div class="form-group">
                            <label for="program-name">School</label>
                            <input type="text" class="form-control" id="program-name" @bind="@SchoolService.Objects.FirstOrDefault(s=>s.Id==Program.Department.SchoolId).Name" disabled /> @*must change this to the actual school name*@
                        </div>
                    </div>
                    <div class="col-12">
                         <h5>Accreditation Process</h5>
                         <div>
                              @if (AccrediteStatuses is not null)
                                {
                                    @for (int i = 0; i < AccrediteStatuses.Count && i < 3; i++)
                                    {
                                        @if(Program.AccreditStatusId ==3){
                                             <div class=" step step-completed">
                                                 <div>
                                                      <div class="circle">@AccrediteStatuses[i].Id</div>
                                                 </div>
                                                 <div>
                                                      <div class="title">@AccrediteStatuses[i].Name</div>
                                                      @* <div class="caption">Optional</div> *@
                                                 </div>
                                            </div>
                                        }else
                                        {
                                             @if(i > 3)
                                             {
                                                  @if(AWFunctions.IsBetween(Program.AccreditStatusId, 7, 10, true))
                                                  {
                                                       <div class="step step-danger">
                                                            <div>
                                                                 <div class="circle">!</div>
                                                            </div>
                                                            <div>
                                                                 <div class="title">@AccrediteStatuses.FirstOrDefault(x=>x.Id==Program.AccreditStatusId)?.Name</div>
                                                                 <div class="caption">requires attention</div>
                                                            </div>
                                                       </div>
                                                  }
                                             }
                                             @if(AccrediteStatuses[i].Id==Program.AccreditStatusId)
                                             {
                                             <div class="step step-active">
                                                  <div>
                                                       <div class="circle">@AccrediteStatuses[i].Id</div>
                                                  </div>
                                                  <div>
                                                       <div class="title">@AccrediteStatuses[i].Name</div>
                                                       @* <div class="caption">Optional</div> *@
                                                  </div>
                                             </div>
                                             }
                                             else if(Program.AccreditStatusId >= AccrediteStatuses[i].Id && Program.AccreditStatusId <=6)
                                             {
                                             <div class=" step step-completed">
                                                  <div>
                                                       <div class="circle">@AccrediteStatuses[i].Id</div>
                                                  </div>
                                                  <div>
                                                       <div class="title">@AccrediteStatuses[i].Name</div>
                                                       @* <div class="caption">Optional</div> *@
                                                  </div>
                                             </div>
                                             }
                                             else 
                                             {
                                                  <div class=" step ">
                                                  <div>
                                                       <div class="circle">@AccrediteStatuses[i].Id</div>
                                                  </div>
                                                  <div>
                                                       <div class="title">@AccrediteStatuses[i].Name</div>
                                                       @* <div class="caption">Optional</div> *@
                                                  </div>
                                             </div>
                                             }    
                                        }
                                    }
                                     @if(AWFunctions.IsBetween(Program.AccreditStatusId, 4, 14))
                                             {
                                                  <div class="step step-danger">
                                                       <div>
                                                            <div class="circle">!</div>
                                                       </div>
                                                       <div>
                                                            <div class="title">@AccrediteStatuses.FirstOrDefault(x=>x.Id==Program.AccreditStatusId)?.Name</div>
                                                            @* <div class="caption">Lorem ipsum dolor sit amet consectetur adipisicing elit. Quibusdam dolores, repellendus maxime vero voluptate, animi veritatis nemo error iusto suscipit dolorem illum harum. Eveniet officia at facilis alias suscipit minus?</div> *@
                                                       </div>
                                                  </div>
                                             }
                                }

                         </div>
                         <div>
                              <h6>Update Status</h6>
                              <InputSelect @bind-Value="Program.AccreditStatusId" class="form-select" aria-label="Default select example" >
                                <option value="@Program.AccreditStatusId">@AccrediteStatusService.Objects.First(acc=>acc.Id==Program.AccreditStatusId).Name</option>
                                @if (AccrediteStatuses is not null)
                                {
                                     @foreach(var item in AccrediteStatuses)
                                     {
                                          if(item.Id != Program.AccreditStatusId)
                                          {
                                               
                                               @* <option value="@AccrediteStatusService.Objects.First(x=>x.Id==Program.AccreditStatusId-1).Id">@AccrediteStatusService.Objects.First(x=>x.Id==Program.AccreditStatusId-1).Name</option> *@
                                               <option value="@item.Id">@item.Name</option>
                                          }
                                     }
                                   @* @if(Program.AccreditStatusId == 1) *@
                                   @* { *@
                                   @*      <option value="2">@AccrediteStatusService.Objects.First(x=>x.Id==2).Name</option> *@
                                   @* }else if(Program.AccreditStatusId > 1) *@
                                   @* { *@
                                   @*           <option value="@AccrediteStatusService.Objects.First(x=>x.Id==Program.AccreditStatusId-1).Id">@AccrediteStatusService.Objects.First(x=>x.Id==Program.AccreditStatusId-1).Name</option> *@
                                   @*           <option value="@AccrediteStatusService.Objects.First(x=>x.Id==Program.AccreditStatusId+1).Id">@AccrediteStatusService.Objects.First(x=>x.Id==Program.AccreditStatusId+1).Name</option> *@
                                   @* } *@
                                }
                            </InputSelect>
                            <p>@ErrorMessage</p>
                            <p>@SuccessMessage</p>
                            <InputTextArea @bind-Value="Note.Content" class="form-control" placeholder="Comment" />
                               <button class=" button-success col-12 my-1" @onclick="()=>UpdateStatus().ToString()">Update</button>
                              @if (!Program.Department.Email.IsNullOrEmpty())
                              {
                                   <button class=" button-success col-12 my-1" @onclick="()=>NotifyDepartment()">Notify Department</button>
                              }
                              @if (!Program.Department.School.Email.IsNullOrEmpty())
                              {
                                   <button class=" button-success col-12 my-1" @onclick="()=>NotifySchool()">NotifySchool</button>
                              }
                              <button class=" button-danger col-12 my-1" @onclick="()=>UpdateStatus()">Delete Program</button>
                         </div>
                    </div>

                    <div class="col-12 my-3">
                         <h5>Accreditation Details</h5>
                         @if (
                              @Program.AccreditStatusId == 3 || 
                              @Program.AccreditStatusId == 4)
                         {
                              <p type="number" class="m-0" id="program-name">
                                   Accredited for @Program.GetDuration().ToString()
                                   <br/> 
                                   From @Program.ValidFrom.Date.ToString() to @Program.ValidTo.Date.ToString()
                              </p>
                         }
                         else
                         {
                              <div class="form-group my-1">
                                   <label for="program-name">Audite Information</label>
                                   <p>
                                        Program accreditation information is only available after the program is accredited
                                   </p>
                              </div>
                         }

                
                       
                    </div>

                </div>

            }
   
}


@code {
     NoteDto Note { get; set; }  = new();
     public string ErrorMessage { get; set; } = "";
     public string SuccessMessage { get; set; } = "";
    [Parameter]
    public Program Program { get; set; } = new();
    [Parameter]
    public bool IsVisible { get; set; } = false;
    public string Visibility => IsVisible ? "show-overlay" : "hide-overlay";
    public List<School> Schools { get; set; } = new List<School>();
    public List<AccreditStatus> AccrediteStatuses { get; set; } = new List<AccreditStatus>();
    Task Close()
    {
        IsVisible = false;
        StateHasChanged();
        return Task.CompletedTask;
    }
     async Task UpdateStatus()
    {
          busy = true;
          if(!(Note.Content.Length >0))
          ErrorMessage = "Please enter a comment";
          else
          {
               Note.Name = AccrediteStatuses.FirstOrDefault(x=>x.Id==Program.AccreditStatusId)?.Name;
               Note.ProgramId = Program.Id;
               Note.UserId = await AuthService.GetId();
               ErrorMessage = "";

               Program.AccreditStatusId = Program.AccreditStatusId == 1 ? 2 : Program.AccreditStatusId;
               await NoteService.Create(Note);
               await ProgramService.Update(Program);
               SuccessMessage = "Status Updated";
               StateHasChanged();
          }
          busy = false;
    }
    protected override async void OnInitialized()
    {
        //Departments = await DepartmentService.Get();
        await NoteService.Get();
        await AuthService.InitialiseAuthState();
        Schools = await SchoolService.Get();
        AccrediteStatuses = await AccrediteStatusService.Get();
   
        StateHasChanged();

    }

     async Task NotifyDepartment()
     {
          busy = true;
          if(!(Note.Content.Length >0))
               ErrorMessage = "Please enter a comment";
          else
          {
               await MailService.SendEmail(new()
               {
                    Email = new(){ Program.Department.Email },
                    Subject = $"Notification on {Program.Name}",
                    Message =  $"Note  Content : {Note.Content} \n "
               });
               SuccessMessage = "Department Notified";
               StateHasChanged();
          }
          busy = false;
     }
     
     async Task NotifySchool()
     {
          busy = true;
          if(!(Note.Content.Length >0))
               ErrorMessage = "Please enter a comment";
          else
          {
               await MailService.SendEmail(new()
               {
                    Name = "Accreditation Watch",
                    Email = new(){ Program.Department.School.Email },
                    Subject = $"Notification on {Program.Name}",
                    Message =  $"Note  Content : {Note.Content} \n "
               });
               SuccessMessage = "School Notified";
               StateHasChanged();
          }
          busy = false;
     }
     
    bool busy { get; set; } = false;

}
